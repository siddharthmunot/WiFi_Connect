<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!-- Header -->

    <include
        android:id="@+id/headerLayout"
        layout="@layout/header_layout" />

    <!-- Body -->

    <RelativeLayout
        android:id="@+id/wizard_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/wizard_start2"
            style="@style/stext"
            android:layout_below="@+id/wizard_start1"
            android:text="@string/start2" />

        <Button
            android:id="@+id/btnwizard"
            style="@style/sbtnrhizome"
            android:layout_below="@+id/wizard_start2"
            android:text="@string/btnwizard" />

        <TextView
            android:id="@+id/wizard_start1"
            style="@style/stext"
            android:layout_alignLeft="@+id/wizard_start2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="88dp"
            android:text="@string/start1" />
    </RelativeLayout>

</RelativeLayout>